<%- include('partials/user-header-log') %>
  <div class="jumbotron text-center">
    <div class="container">
      <h1 class="display-4">My Secrets!</h1>
      <hr>
      <div class="row">
        <% user.secret.forEach(function(sct){ %>
          <div class="col-lg-4" id="card-img">
            <div class="card text-center text-white">
              <img src="uploads/<%=sct.picture %>" class="card-img">
              <div class="card-img-overlay">
                <h2 class="card-text align-middle w-100 h-100" id="img-words">
                  <%=sct.singleSecret%>
                </h2>
                <div class="row" id="operate-btns">
                  <div class="col-lg-4">
                    <!-- delete this post -->
                    <form action="/delete" method="post">
                      <input type="hidden" name="postID" value="<%=sct.id%>"></input>
                      <button type="submit" style="text-decoration: none; color: red" class="btn btn-sm btn-link far fa-trash-alt">delete</button>
                    </form>
                    <!-- end of delete -->
                  </div>
                  <div class="col-lg-4">
                    <!-- update this post -->
                    <form action="/modify" method="POST">
                      <input type="hidden" name="postContent" value="<%=sct.singleSecret%>"></input>
                      <input type="hidden" name="postID" value="<%=sct.id%>"></input>
                      <input type="hidden" name="picture" value="<%=sct.picture%>"></input>
                      <button type="submit" style="text-decoration: none; color: rgb(128, 146, 27)" class="btn btn-sm btn-link fas fa-edit">modify</button>
                    </form>
                    <!-- end of delete -->
                  </div>
                  <div class="col-lg-4">
                    <!-- update this post -->
                    <form action="/comment" method="POST">
                      <input type="hidden" name="postContent" value="<%=sct.singleSecret%>"></input>
                      <input type="hidden" name="postID" value="<%=sct.id%>"></input>
                      <input type="hidden" name="userID" value="<%=user.id%>"></input>
                      <input type="hidden" name="picture" value="<%=sct.picture%>"></input>
                      <button type="submit" style="text-decoration: none; color: rgb(57, 156, 236)" class="btn btn-sm btn-link far fa-comment">comments</button>
                    </form>
                    <!-- end of delete -->
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
      </div>
      <div id="row-buttons">
        <a class="btn btn-primary btn-lg " href="/submit" role="button">Create a Secret</a>
        <a class="btn btn-dark btn-lg " href="/signout" role="button">Log Out</a>
      </div>
    </div>
  </div>

  <%- include('partials/user-footer') %>